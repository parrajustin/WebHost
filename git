#!/bin/bash
# My first script

if [ "$#" -gt 1 ]; then
    echo "Too many arguments";
    exit;
fi

if [ "$1" = "pull" ]; then
    git pull origin master;
    echo "pulled origin";
    exit;
elif [ "$1" = "dev" ]; then
	npm install;
	node index.js;
elif [ "$1" = "start" ]; then
	npm install;
	forever start --uid "production" -d --append --killSignal=SIGTERM -c "npm start" ./;
elif [ "$1" = "stop" ]; then
	npm install;
	forever stop production;
else
    echo "========] Git Sh File [========";
    echo "Commands: ";
    echo " - pull";
    echo " - dev";
    echo " - start";
    echo " - stop";
fi



